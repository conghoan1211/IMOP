            })
                .then(response => {
                    if (response.ok) {
                        return response.text();
                    }
                    throw new Error('Failed to update avatar.');
                })
                .then(result => {
                    // Reload the page after successful submission
                    location.reload();
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }
    });
