<script>
    function validateprofileform() {
        let isvalid = true;

        get form elements
        const username = document.queryselector('input[name="updateprofile.username"]');
        const dob = document.queryselector('input[name="updateprofile.dob"]');
        const bio = document.queryselector('textarea[name="updateprofile.bio"]');
        const sex = document.queryselector('input[name="updateprofile.sex"]:checked');

        clear previous error messages
        clearerrors();

        validate username
        if (!username.value.trim()) {
            showerror(username, 'tên hiển thị không được để trống');
            isvalid = false;
        } else if (username.value.length < 5) {
            showerror(username, 'tên hiển thị phải ít nhất 5 ký tự');
            isvalid = false;
        } else if (username.value.length > 50) {
            showerror(username, 'tên hiển thị không được vượt quá 50 ký tự');
            isvalid = false;
        }

        validate sex
        if (!sex) {
            showerror(document.queryselector('.edit-profile-gender'), 'giới tính không được để trống');
            isvalid = false;
        }

        validate date of birth
        if (!dob.value) {
            showerror(dob, 'ngày sinh không được để trống');
            isvalid = false;
        } else {
            const selecteddate = new date(dob.value);
            const today = new date();
            const mindate = new date('1890-01-01');

            if (selecteddate > today) {
                showerror(dob, 'ngày sinh không vượt quá ngày hiện tại!');
                isvalid = false;
            } else if (selecteddate < mindate) {
                showerror(dob, 'năm sinh phải lớn hơn hoặc bằng 1890!');
                isvalid = false;
            }
        }

        validate bio
        if (bio.value.length > 60) {
            showerror(bio, 'bio không được vượt quá 60 ký tự');
            isvalid = false;
        }

        return isvalid;
    }

    function showerror(element, message) {
        create error element
        const errordiv = document.createelement('div');
        errordiv.classname = 'validation-error text-danger mt-1';
        errordiv.textcontent = message;

        add inline css style for red text
        errordiv.style.color = 'red'; red color for error message

        add error class to input
        element.classlist.add('is-invalid');

        insert error after the input element
        element.parentnode.insertbefore(errordiv, element.nextsibling);
    }

    function clearerrors() {
        remove all error messages
        document.queryselectorall('.validation-error').foreach(error => error.remove());

        remove error classes from inputs
        document.queryselectorall('.is-invalid').foreach(input => input.classlist.remove('is-invalid'));
    }

    add event listeners for real-time validation
    document.addeventlistener('domcontentloaded', function () {
        const form = document.getelementbyid('edit-profile');
        const inputs = form.queryselectorall('input, textarea');

        inputs.foreach(input => {
            input.addeventlistener('blur', function () {
                validateprofileform();
            });
        });

        form.addeventlistener('submit', function (e) {
            if (!validateprofileform()) {
                e.preventdefault();
            }
        });
    });
</script>

