@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zalo - Clone</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <!-- css -->
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/common.css">
    <link rel="stylesheet" href="~/css/nav-header.css">
    <link rel="stylesheet" href="~/css/message-sidebar.css">
    <link rel="stylesheet" href="~/css/message-dialog.css">
    <link rel="stylesheet" href="~/css/contact-sidebar.css">
    <link rel="stylesheet" href="~/css/aside-contact.css">
    <link rel="stylesheet" href="~/css/aside-invitation.css">
    <link rel="stylesheet" href="~/css/profile-dialog.css">
    <link rel="stylesheet" href="~/css/sidebar-search.css">
    <link rel="stylesheet" href="~/css/aside-post-cmt.css">
    <link rel="stylesheet" href="~/css/aside-posts.css">

    <!-- font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap">
    <!-- icon title -->
    <link rel="icon" type="image/x-icon" href="~/img/Designer.png">
</head>

<body>
    <div class="main-container">
        <div id="header"></div>
        <div id="sidebar"></div>
        <div id="aside"></div>
    </div>
    <!-- profile dialog -->
    <div id="profileDialog" class="dialog-overlay" style="display: none;">
        <div class="dialog-content">
            <div id="view-profile">
                <div class="flex-align-center-between profile-head">
                    <div class="profile-title">Thông tin tài khoản</div>
                    <span class="flex-align-justify-center close-btn" id="close-profile-btn">
                        <i class="fa-solid fa-xmark "></i>
                    </span>
                </div>
                <div class="flex-align-center profile-info">
                    <img src="https://s120-ava-talk.zadn.vn/f/4/0/3/5/120/d4b18e254c63eb8d920ef756817e0442.jpg"
                         class="avatar-img profile-avatar" alt="avatar" id="profileAvatar">
                    <div class="profile-name">Phạm Hoan</div>
                    <button class="profile-edit"><i class="fa-solid fa-pencil"></i></button>
                    <button class="flex-align-justify-center profile-change-avatar">
                        <i class="fa-solid fa-camera"></i>
                    </button>
                    <input type="file" id="fileInput" style="display: none;" accept="image/*">
                </div>
                <div class="profile-title">Thông tin cá nhân</div>
                <div class="profile-detail">
                    <div class="profile-detail-list">
                        <div class="profile-detail-item">
                            <span class="profile-detail-title">Bio</span>
                            <span>-.-</span>
                        </div>
                        <div class="profile-detail-item">
                            <span class="profile-detail-title">Giới tính</span>
                            <span>Nam</span>
                        </div>
                        <div class="profile-detail-item">
                            <span class="profile-detail-title">Ngày sinh</span>
                            <span>12 tháng 11, 2003</span>
                        </div>
                        <div class="profile-detail-item">
                            <span class="profile-detail-title">Điện thoại</span>
                            <span>0326644740</span>
                        </div>
                        <div class="profile-note">Chỉ bạn bè đã chấp nhận kết bạn mới xem được số điện thoại này</div>
                    </div>
                    <button class="profile-edit-btn">
                        <i class="fa-solid fa-pencil"></i>
                        <span>&nbsp;Cập nhật</span>
                    </button>
                </div>
            </div>

            <div id="edit-profile" style="display: none ;">
                <div class="flex-align-center-between profile-head">
                    <div class="flex-align-center profile-title">
                        <span class="flex-align-justify-center return-btn">
                            <i class="fa-solid fa-chevron-left"></i>
                        </span>
                        <span>Cập nhật thông tin tài khoản</span>
                    </div>
                </div>
                <div class="profile-edit-cont">
                    <div>
                        <div class="flex-column profile-edit">
                            <span class="profile-edit-text">Tên hiển thị</span>
                            <input class="profile-edit-name" type="text" name="" id="" maxlength="50">
                        </div>
                        <div class="register-input-error">Tên hiển thị ko được để trống </div>
                    </div>
                    <div class="edit-profile-title">Thông tin cá nhân</div>
                    <div class="flex-align-center edit-profile-gender">
                        <div class="flex-align-center">
                            <input required name="gender" id="male" type="radio" class="edit-profile-gender_btn">
                            <label for="male" class="profile-edit-gender_text">Nam</label>
                        </div>
                        <div class="flex-align-center">
                            <input name="gender" id="female" type="radio" class="edit-profile-gender_btn">
                            <label for="female" class="profile-edit-gender_text">Nữ</label>
                        </div>
                        <div class="flex-align-center">
                            <input name="gender" id="other" type="radio" class="edit-profile-gender_btn">
                            <label for="other" class="profile-edit-gender_text">Khác</label>
                        </div>
                    </div>
                    <div class="flex-column">
                        <span class="profile-edit-text">Ngày sinh</span>
                        <input class="profile-edit-date" type="date" name="" id="">
                        <div class="register-input-error">Tên hiển thị ko được để trống </div>
                    </div>
                    <div class="flex-column profile-edit-bio_wrapper">
                        <span class="profile-edit-text">Bio</span>
                        <textarea class="profile-edit-bio" name="" id="" maxlength="60"></textarea>
                        <div class="register-input-error">Tên hiển thị ko được để trống </div>
                    </div>
                </div>
                <div class="edit-profile-footer">
                    <button class="btn btn-neutral profile-btn-cancel">Hủy</button>
                    <button class="btn btn-primary profile-btn-update">Cập nhật</button>
                </div>
            </div>
        </div>
    </div>

    <!--  other profile dialog  -->
    <div id="profileOtherDialog" class="dialog-overlay" style="display: none">
        <div class="dialog-content">
            <div id="view-profile">
                <div class="flex-align-center-between profile-head">
                    <div class="profile-title">Thông tin tài khoản</div>
                    <span class="flex-align-justify-center close-btn" id="close-other-profile">
                        <i class="fa-solid fa-xmark"></i>
                    </span>
                </div>
                <div class="flex-align-center profile-info">
                    <img src="https://s120-ava-talk.zadn.vn/f/4/0/3/5/120/d4b18e254c63eb8d920ef756817e0442.jpg"
                         class="avatar-img profile-avatar" alt="avatar" id="profileAvatar" />
                    <div class="profile-name">Phạm Hoan</div>
                    <button class="profile-edit"><i class="fa-solid fa-pencil"></i></button>
                    <input type="file" id="fileInput" style="display: none" accept="image/*" />
                </div>
                <button class="btn btn-secondary large profile-btn-message">
                    Nhắn tin
                </button>
                <div class="profile-border-4px"></div>
                <div class="profile-title">Thông tin cá nhân</div>
                <div class="profile-detail">
                    <div class="profile-detail-list">
                        <div class="profile-detail-item">
                            <span class="profile-detail-title">Bio</span>
                            <span>-.-</span>
                        </div>
                        <div class="profile-detail-item">
                            <span class="profile-detail-title">Giới tính</span>
                            <span>Nam</span>
                        </div>
                        <div class="profile-detail-item">
                            <span class="profile-detail-title">Ngày sinh</span>
                            <span>12 tháng 11, 2003</span>
                        </div>
                        <div class="profile-detail-item">
                            <span class="profile-detail-title">Điện thoại</span>
                            <span>0326644740</span>
                        </div>
                        <div class="profile-note">
                            Chỉ bạn bè đã chấp nhận kết bạn mới xem được số điện thoại này
                        </div>
                    </div>
                </div>
                <div class="profile-other-action">
                    <button class="flex-align-center profile-action-btn">
                        <i class="fa-solid fa-ban"></i>
                        <div class="profile-action-btn__name">Chặn tin nhắn và cuộc gọi</div>
                    </button>
                    <button class="flex-align-center profile-action-btn">
                        <i class="fa-solid fa-triangle-exclamation"></i>
                        <div class="profile-action-btn__name">Báo xấu</div>
                    </button>
                    <button class="flex-align-center profile-action-btn">
                        <i class="fa-regular fa-trash-can"></i>
                        <div class="profile-action-btn__name">Xóa khỏi danh sách bạn bè</div>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- modal add post  -->
    <div class="flex-align-justify-center modal-addpost" style="display: none;">
        <div class="flex-column modal-addpost__wrapper">
            <div style="position: relative;">
                <div class="flex-align-justify-center modal-addpost__title">New post</div>
                <div class="modal-addpost__close">
                    &times;</span>
                </div>
                <div class="flex modal-addpost__content">
                    <img class="avatar-img aprofile-post-avt" src="assests/img/avt.jpeg" alt="">
                    <div class="flex-column modal-addpost__container">
                        <div class="modal-addpost__name">_hoanpc.03</div>
                        <select class="modal-addpost__privacy">
                            <option value="">Public</option>
                            <option value="">Friends</option>
                            <option value="">Only me</option>
                        </select>
                        <div class="modal-addpost__input">
                            <textarea class="modal-addpost__input-text" name="" id="" maxlength="500"
                                      placeholder="What's new?"></textarea>
                        </div>
                        <div class="flex-align-center modal-addpost__list-img">
                        </div>
                        <div class="flex-justify-between modal-addpost__footer">
                            <div class="modal-addpost__more-icon">
                                <button id="upload-image-btn">
                                    <i class="fa-regular fa-images"></i>
                                </button>
                                <input type="file" id="image-upload-input" multiple accept="image/*"
                                       style="display: none;">
                                <button>
                                    <i class="fa-regular fa-file-image"></i>
                                </button>
                                <button>
                                    <i class="fa-solid fa-hashtag"></i>
                                </button>
                                <button>
                                    <i class="fa-solid fa-location-dot"></i>
                                </button>
                            </div>
                            <button class="btn btn-default modal-addpost__btn">Post</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="module" src="~/js/init/index.js"></script>
    <script type="module" src="~/js/init/Helper/MyLoadPromise.js"></script>
    <script type="module" src="~/js/init/Helper/MyAsynce.js"></script>

    <script type="module" src="~/js/init/message-dialog-init.js"></script>
    <script type="module" src="~/js/init/sidebar-init.js"></script>
    <script type="module" src="~/js/init/message-list-switcher.js"></script>
    <script type="module" src="~/js/init/message-file-upload.js"></script>
    <script type="module" src="~/js/init/Chat/add-message.js"></script>
    <script type="module" src="~/js/init/Helper/timer.js"></script>
    <script type="module" src="~/js/init/Chat/react-message.js" async></script>
    <script type="module" src="~/js/init/Contact/option-friend.js"></script>
    <script type="module" src="~/js/init/Dialog/profile-init.js"></script>
    <script type="module" src="~/js/init/Dialog/profile-other-init.js"></script>
    <script type="module" src="~/js/init/Dialog/setting-nav-init.js"></script>

    <script type="module" src="~/js/init/Dialog/Post/post-more-action.js"></script>
    <script type="module" src="~/js/init/Dialog/Post/react-post.js"></script>
    <script type="module" src="~/js/init/Dialog/Post/avt-zoom.js"></script>
    <script type="module" src="~/js/init/Dialog/Post/add-post-input.js"></script>
</body>
</html>