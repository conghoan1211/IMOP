<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zalo - Clone</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <!-- css -->
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/common.css">
    <link rel="stylesheet" href="~/css/nav-header.css">

    <link rel="stylesheet" href="~/css/message-sidebar.css">
    <link rel="stylesheet" href="~/css/message-dialog.css">
    <link rel="stylesheet" href="~/css/sidebar-search.css">
    <link rel="stylesheet" href="~/css/contact-sidebar.css">
    <link rel="stylesheet" href="~/css/aside-contact.css">
    <link rel="stylesheet" href="~/css/aside-invitation.css">

    <link rel="stylesheet" href="~/css/aside-profile.css">
    <link rel="stylesheet" href="~/css/profile-dialog.css">
    <link rel="stylesheet" href="~/css/aside-post-cmt.css">
    <link rel="stylesheet" href="~/css/aside-posts.css">
    <link rel="stylesheet" href="~/css/profile-page.css">


    <!-- font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap">
    <!-- icon title -->
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="~/img/Designer.png">
</head>

<body>
    <header class="sidebar-head">
        <div class="nav-top">
            <button class="avatar nav-btn openProfileDialog">
                @{
                    string avatar = User.Claims.FirstOrDefault(c => c.Type == "Avatar")?.Value;
                    if (string.IsNullOrEmpty(avatar)) avatar = "default-avatar.png";
                }
                <img src="/img/@avatar" class="avatar-img" alt="avatar">
            </button>
            <div class="flex nav-btn">
                <a asp-page="/post" class="flex-align-justify-center width-100pt height-100pt">
                    <i class="fa-solid fa-house nav-btn-icon"></i>
                </a>
            </div>
            <div class="flex nav-btn">
                <a asp-page="message" class="flex-align-justify-center width-100pt height-100pt">
                    <i class="fa-regular fa-comment nav-btn-icon"></i>
                </a>
            </div>
            <div class="flex nav-btn">
                <a asp-page="aside-contact" class="flex-align-justify-center width-100pt height-100pt">
                    <i class="fa-regular fa-address-book nav-btn-icon"></i>
                </a>
            </div>
            <div>
                <button class="nav-btn">
                    <i class="fa-regular fa-heart nav-btn-icon"></i>
                </button>
            </div>
            <div class="flex nav-btn">
                <a href="/profile" class="flex-align-justify-center width-100pt height-100pt">
                    <i class="fa-regular fa-user nav-btn-icon"></i>
                </a>
            </div>
        </div>
        <div class="nav-bottom">
            <div>
                <button class="nav-btn">
                    <i class="fa-solid fa-cloud nav-btn-img"></i>
                </button>
            </div>
            <div>
                <button class="nav-btn">
                    <i class="fa-solid fa-briefcase nav-btn-img"></i>
                </button>
            </div>
            <div>
                <button class="nav-btn nav-setting">
                    <i class="fa-solid fa-gear nav-btn-img"></i>
                </button>
            </div>
        </div>
    </header>

    <div class="setting-modal">
        <div class="flex-column">
            <button class="setting-btn"> Thông tin tài khoản </button>
            <button class="setting-btn"> Đổi mật khẩu</button>
            <button class="setting-btn"> Cài đặt</button>
            <form method="post" asp-page="/login" asp-page-handler="Logout" class="" onsubmit="clearLocalStorage()">
                <button class="setting-btn btn-red width-100pt" type="submit">Đăng xuất</button>
            </form>
        </div>
    </div>

    <!-- change password  -->
    <div id="changePassDialog" class="dialog-overlay" style="display: none;">
        <div class="dialog-content">
            <div class="flex-align-center-between profile-head">
                <div class="profile-title">Thay đổi mật khẩu</div>
                <span class="flex-align-justify-center close-btn">
                    <i class="fa-solid fa-xmark "></i>
                </span>
            </div>
            <div class="changepass-wrapper">
                <div class="flex-column profile-edit">
                    @{
                        string username = User.Claims.FirstOrDefault(c => c.Type == "Username")?.Value;
                    }
                    <span class="profile-edit-text changepass-name">Mật khẩu hiện tại</span>
                    <input class="profile-edit-name" type="password" name="" id="" maxlength="50" value="@username">

                    <div class="register-input-error">Tên hiển thị  @username </div>
                </div>
                <div class="flex-column profile-edit">
                    <span class="profile-edit-text changepass-name">Mật khẩu mới</span>
                    <input class="profile-edit-name" type="password" name="" id="" maxlength="50">
                    <div class="register-input-error">Tên hiển thị ko được để trống </div>
                </div>
                <div class="flex-column profile-edit">
                    <span class="profile-edit-text changepass-name">Nhập lại mật khẩu</span>
                    <input class="profile-edit-name" type="password" name="" id="" maxlength="50">
                    <div class="register-input-error">Tên hiển thị ko được để trống </div>
                </div>
                <div class="edit-profile-footer">
                    <button class="btn btn-neutral changepass-cancel">Hủy</button>
                    <button class="btn btn-primary profile-btn-update">Cập nhật</button>
                </div>
            </div>
        </div>
    </div>

    <!-- profile dialog -->
    


    @RenderBody()

    @await RenderSectionAsync("Scripts", required: false)

    <script type="module" src="~/js/profile/setting-nav-init.js"></script>
    <script type="module" src="~/js/profile/profile-init.js"></script>
    <script type="module" src="~/js/profile/profile-other-init.js"></script>

    <script type="module" src="~/js/profile/post-more-action.js"></script>
    <script type="module" src="~/js/profile/react-post.js"></script>
    <script type="module" src="~/js/profile/add-post-input.js"></script>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/htmx.min.js"></script>

    <script>
        function clearLocalStorage() {
            localStorage.clear();
        }
    </script>

</body>
</html>